{
  "manifest_version": 3,
  "name": "LinkedUp",
  "version": "1.0.0",
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*", "https://www.indeed.com/*", "https://www.glassdoor.com/*"],
      "js": ["inject.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "LinkedUp"
  },

  "permissions": [
    "scripting",
    "tabs",
    "activeTab", 
    "storage",
    "<all_urls>"
],
"host_permissions": [
    "http://*/*",
    "https://*/*"
],

"background": {
  "service_worker": "background.js"
}
}
