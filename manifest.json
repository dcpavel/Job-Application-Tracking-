{
  "manifest_version": 3,
  "name": "JobApplicationTrakr",
  "version": "1.0.0",
  "key": "",
  "action": {
    "default_popup": "popup.html",
    "default_title": "JobApplicationTrakr"
  },
  "oauth2": {
    "client_id": "40510895582-6gg1iiips6aq3rf2kl1c50deg4nlsv46.apps.googleusercontent.com",
    "scopes": [
      "openid",
      "https://www.googleapis.com/auth/spreadsheets",
      "https://www.googleapis.com/auth/drive.readonly",
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  },
  // These comments break JSON, will need to be removed
  "permissions": [
    "activeTab",
    "storage",
    "identity",
    "scripting",
    // Do we need identity.email if we have identity? or should we limit to only email?
    "identity.email",
    // This is for all googleapis.com, but we only need a few
    "https://www.googleapis.com/",
    // tabs is deprecated over activeTab
    "tabs",
    // which of these do we need?
    "https://openidconnect.googleapis.com/",
    // where is this used?
    "notifications",
    // are we still using the script API?
    "https://script.google.com/*",
    // where is this used?
    "background"
  ],
  "host_permissions": [
    "https://www.linkedin.com/jobs/*",
    "https://www.indeed.com/*",
    "https://www.glassdoor.com/*",
    // Why are we getting permissions for all sites and not just the ones we need?
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "dist/background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/jobs/*",
        "https://www.indeed.com/*",
        "https://www.glassdoor.com/*"
      ],
      "js": ["dist/inject.bundle.js"]
    }
  ]
}
